{{- $ctx := . }}
{{- if .IsHome }}{{ $ctx = .Site }}{{ end }}
{{- $pages := slice }}
{{- if or $.IsHome $.IsSection }}
{{- $pages = $ctx.RegularPages }}
{{- else }}
{{- $pages = $ctx.Pages }}
{{- end }}
{{- $limit := .Site.Config.Services.RSS.Limit }}
{{- if ge $limit 1 }}
{{- $pages = $pages | first $limit }}
{{- end }}

{{- range $pages }}
<item>
  <title>{{ .Title }}</title>
  {{- with .Params.Link -}}<link>{{ . }}</link>{{- end -}}
  <pubDate>{{ .PublishDate.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
  <author>{{ or (and (reflect.IsMap .Params.author) (isset .Params.author "email") .Params.author.email) site.Params.author.email }}</author>
  <guid>{{ .Permalink }}</guid>
  {{- range .Params.categories }}
  <category>{{ . }}</category>
  {{- end}}
  <description>{{ .Description | transform.XMLEscape | safeHTML }}</description>
</item>
{{- end }}
